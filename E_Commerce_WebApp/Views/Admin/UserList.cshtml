@model IEnumerable<E_Commerce_WebApp.Models.tbl_User>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/Admin.cshtml";}




<p>
    <a class="btn bg-gradient-info w-100 mt-4 mb-0" href="~/Admin/User_Registration">Create New User</a>
</p>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>User table</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Age</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Gender</th>
                                    <th class="text-secondary opacity-7">Cell</th>
                                    <th class="text-secondary opacity-7">Address</th>
                                    <th class="text-secondary opacity-7">Status</th>
                                    <th class="text-secondary opacity-7">CNic</th>
                                    <th class="text-secondary opacity-7">Images </th>
                                    <th class="text-secondary opacity-7">User Name</th>
                                    <th class="text-secondary opacity-7">Password</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="../assets/img/team-2.jpg" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.U_Name)</h6>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_Email)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_Age)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_Gender)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_cell)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">
                                                @Html.DisplayFor(modelItem => item.U_Address)
                                            </span>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @if (item.U_Status == 1.ToString())
                                            {
                                                <span class="badge badge-sm bg-gradient-success">
                                                    Active
                                                </span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_Cnic)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_Img)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_UserName)</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.U_Password)</span>
                                        </td>
                                       

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@if (ViewBag.Massage != null)
{
    <script type="text/javascript">alert('@ViewBag.Massage');</script>
}